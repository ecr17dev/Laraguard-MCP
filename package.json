{
  "name": "laraguard-mcp",
  "version": "1.0.0",
  "description": "Security audit MCP server for Laravel projects (TypeScript, stdio)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "laraguard-mcp": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "check": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "laravel",
    "security",
    "audit"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
